                        android:background="@drawable/set_radius"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@android:color/secondary_text_light"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
