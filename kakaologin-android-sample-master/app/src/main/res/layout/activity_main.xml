                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:width="50dp"
                        android:height="30dp"
                        android:gravity="center"
                        android:text="SUN"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:width="50dp"
                        android:height="30dp"
                        android:gravity="center"
                        android:text="MON"
                        android:textColor="#ffffff"/>

                    <TextView
