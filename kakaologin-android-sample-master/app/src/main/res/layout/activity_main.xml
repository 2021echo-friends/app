                        android:background="@drawable/set_radius"
                        android:gravity="center"
                        android:text="16"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/set_radius"
